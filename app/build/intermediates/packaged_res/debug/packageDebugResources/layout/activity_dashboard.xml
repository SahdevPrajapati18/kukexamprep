<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp"
    android:layout_marginTop="24dp"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Greeting -->
        <TextView
            android:id="@+id/userGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HeyðŸ‘‹"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's get ready for exams!"
            android:textSize="18sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="24dp" />

        <!-- Grid of Cards -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Card 1 - PYQs -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_pyq"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="6dp"
                android:backgroundTint="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_book"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PYQs"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Semesters\nCovered"
                        android:textSize="12sp"
                        android:textColor="#CCCCCC"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Copy this block and change ids/text/icons for other cards -->
            <!-- Card 2 - Notes -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_notes"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="6dp"
                android:backgroundTint="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_book"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Semesters\nCovered"
                        android:textSize="12sp"
                        android:textColor="#CCCCCC"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Card 3 - Date Sheets -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_date_sheets"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="6dp"
                android:backgroundTint="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_book"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date Sheets"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Semesters\nCovered"
                        android:textSize="12sp"
                        android:textColor="#CCCCCC"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Card 4 - syllabus -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_syllabus"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="6dp"
                android:backgroundTint="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_book"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Syllabus"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Semesters\nCovered"
                        android:textSize="12sp"
                        android:textColor="#CCCCCC"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- card_notification1-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_notifications1"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="6dp"
                android:backgroundTint="#1E1E1E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/notification"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Semesters\nCovered"
                        android:textSize="12sp"
                        android:textColor="#CCCCCC"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:backgroundTint="#BB86FC"
            android:layout_gravity="end"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
